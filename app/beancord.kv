<TextInput>
    size_hint: (0.5, 0.1)

<Label>
    size_hint: (0.5, 0.1)
    font_size: 20

<LoginScreen>
    username_entry: username
    ip_entry: ip
    port_entry: port

    # Username Entry
    Label:
        text: "Username:"
        pos_hint: {"y": 0.9, "right": 0.5}

    TextInput:
        id: username
        multiline: False
        pos_hint: {"y": 0.9, "right": 1}

    # Address Entry
    Label:
        text: "Server Address:"
        pos_hint: {"y": 0.75, "right": 0.5}

    TextInput:
        id: ip
        multiline: False
        pos_hint: {"y": 0.75, "right": 1}

    # Port Entry
    Label:
        text: "Server Port:"
        pos_hint: {"y": 0.6, "right": 0.5}

    TextInput:
        id: port
        text_hint: "(Optional)"
        multiline: False
        pos_hint: {"y": 0.6, "right": 1}
