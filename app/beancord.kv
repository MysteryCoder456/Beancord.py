<LoginScreen>
    username_entry: username
    ip_entry: ip
    port_entry: port

    GridLayout:
        cols: 2
        size: root.width, root.height

        # Username Entry
        Label:
            text: "Username:"

        TextInput:
            id: username
            multiline: False
            size: 100, 50

        # Address Entry
        Label:
            text: "Server Address:"

        TextInput:
            id: ip
            multiline: False
            size: 100, 50

        # Port Entry
        Label:
            text: "Server Port:"

        TextInput:
            id: port
            text_hint: "(Optional)"
            multiline: False
            size: 100, 50
